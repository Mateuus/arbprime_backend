{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@Entities": ["src/database/entities"],
      "@Database": ["src/database/data-source"],
      "@Controllers": ["src/controllers"],
      "@Controllers/*": ["src/controllers/*"],
      "@Routes": ["src/routes"],
      "@Routes/*": ["src/routes/*"],
      "@Core/*": ["src/core/*"],
      "@Core": ["src/core"],
      "@Interfaces": ["src/interfaces"],
      "@Interfaces/*": ["src/interfaces/*"],
      "@Gateways": ["src/gateways"],
      "@Gateways/*": ["src/gateways/*"],
      "@Services": ["src/services"],
      "@Services/*": ["src/services/*"],
      "@Enums": ["src/enums"],
      "@Enums/*": ["src/enums/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts","src/locales/**/*"],
  "exclude": ["node_modules"]
}