    "start:server": "node dist/core/server.js",
    "dev:server": "nodemon --exec 'node --max-old-space-size=8192 -r ts-node/register -r module-alias/register ./src/core/server.ts'",
    "start:workers": "node dist/workers/initWorkers.js",
    "dev:workers": "nodemon --exec 'node --max-old-space-size=8192 -r ts-node/register -r module-alias/register ./src/workers/initWorkers.ts'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart all",
    "pm2:stop": "pm2 stop all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "@Controllers": "./dist/controllers",
    "@Routes": "./dist/routes",
    "@Core": "./dist/core",
    "@Interfaces": "./dist/interfaces",
    "@gateways": "./dist/gateways",
    "@services": "./dist/services",
    "@Enums": "./dist/enums",
    "@utils": "./dist/utils"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
